{
  "extends": "./backend/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/src/*"]
    }
  },
  "include": [
    "backend/**/*.ts",
    "frontend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "build",
    "**/build"
  ]
}